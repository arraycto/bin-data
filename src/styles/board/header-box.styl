@import "../common/var.styl"
// 画板顶部
.board-header {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  z-index: 205;
  background: $color-admin-main;
  transition: all .5s ease-in .1s;
  .header-title {
    width: 200px;
    height: 40px;
    display: inline-block;
    .iconfont {
      display: inline-block;
      vertical-align: top;
      height: 100%;
      line-height: 40px;
      cursor: pointer;
      color: $color-blue;
      padding: 0 5px;
    }
    span {
      display: inline-block;
      vertical-align: top;
      font-size: 14px;
      line-height: 40px;
      color: $color-blue;
      padding-left: 20px;
    }
  }
  .control {
    padding-left: 30px;
    height: 40px;
    line-height: 40px;
    .drag-list-menu {
      height: 100%;
      .list-group {
        position: relative;
        width: 56px;
        height: 100%;
        text-align: center;
        .list-group-header {
          position: relative;
          box-sizing: border-box;
          font-size: 14px;
          color: $color-text-info;
          cursor: pointer;
          &:before {
            content: ''
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            border-top: 2px solid transparent;
          }
        }
        &.hovered {
          .list-group-header{
            color: $color-primary;
            &:before {
              border-top: 2px solid $color-primary;
            }
          }
        }
        .list-group-body {
          position: absolute;
          top: 40px;
          left: 0;
          width: 555px;
          height: 333px;
          background-color: #1c1f25;
          .left {
            width: 60px;
            background-color: #2b2e36;
          }
          .right {
            flex: 1;
            text-align: left;
            padding: 20px 0 0 20px;
            .list-item {
              position: relative;
              display: inline-block;
              width: 138px;
              height: 100px;
              line-height: 100px;
              cursor: pointer;
              transition: all 0.2s ease-in-out;
              color: $color-text-info;
              text-align: center;
              background-color: #282a30;
              box-sizing: border-box;
              border: 1px solid transparent;
              margin-right: 20px;
              margin-bottom: 20px;
              span {
                display: inline-block;
                vertical-align: middle;
                text-indent: 7px;
                font-size: 12px;
              }
              &:hover {
                border: 1px solid $color-primary;
              }
            }
          }
        }
      }
    }
  }
  .right-box {
    width: 300px;
    height: 40px;
    line-height: 40px;
    display: inline-block;
    text-align: center;
    .iconfont {
      cursor: pointer;
      width: 65px;
      font-size: 18px;
      transition: .3s;
      &:hover {
        color: $color-primary;
      }
    }
  }
}
