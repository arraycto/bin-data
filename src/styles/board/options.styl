@import "../common/var.styl"
// 右侧参数配置页面
.board-options {
  position: absolute;
  top: 40px;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  z-index: 2000;
  background: #ffffff;
  box-shadow: -2px 0 2px 0 rgba(0, 0, 0, 0.1);
  transition: all .3s;
  transform: translate3d(100%, 0, 0)
  .header-title {
    height: 30px;
    line-height: 30px;
    text-align: center;
    background: $color-admin-ctrl-header;
  }
  .options-body {
    background: $color-admin-main;
    height: calc(100% - 30px);
    text-align: center;
  }

  .expand-hover {
    position: absolute;
    top: 50%;
    left: 0;
    width: 16px;
    height: 160px;
    margin-top: -80px;
    margin-left: -16px;
    cursor: pointer;
    .inner {
      position: relative;
      width: 100%;
      height: 100%;
      background: $color-admin-options-hover;
      opacity: 0;
      transition: all .2s;
      i {
        position: absolute;
        width: 18px;
        height: 18px;
        font-size: 18px;
        top: 50%;
        margin-top: -9px;
        &:hover {
          color: #2d8cf0;
        }
      }
      &:before, &:after {
        content: ''
        position: absolute
        left: 0;
      }
      &:before {
        top: 0;
        margin-top: -16px;
        border-top: 16px solid transparent;
        border-right: 16px solid $color-admin-options-hover;
      }
      &:after {
        bottom: 0;
        margin-bottom: -16px;
        border-left: 16px solid transparent;
        border-top: 16px solid $color-admin-options-hover;
      }
    }
    &:hover .inner {
      opacity: 1;
    }
  }
  &.is-expand {
    transform: translate3d(0, 0, 0)
  }
}
// 页面设置
.page-config {
  padding-top: 10px;
  .gui-field {
    display: flex;
    justify-content: space-between;
    padding: 6px 10px 6px 13px;
    min-height: 24px;
    color: $color-text-info;
    font-size: 12px;
    .gui-field-name {
      padding-right: 5px;
      line-height: 24px;
    }
    .gui-field-container {
      min-height: 24px;
      width: 175px;
      font-size: 12px;
      display: flex;
      .gui-field-number {
        display: inline-block;
        width: 50%;
        .label {
          padding-left: 5px;
          color: #647279;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-size: 12px;
          line-height: 18px;
          text-align: left;
        }
      }
    }
  }
}


// 需要覆盖bin-ui的样式
.options-body .bin-scrollbar__wrap {
  overflow-x: hidden;
}
// 输入框样式覆盖
.options-body .bin-input-number-input {
  background-color: $color-admin-options-dark;
  color: $color-text-info;
}
.options-body .bin-input-number-handler-wrap {
  background-color: $color-admin-options-dark;
}

.options-body .el-color-picker__trigger {
  border: none;
}
