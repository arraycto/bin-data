@import "../common/var.styl"
// 左侧控制栏
.board-control {
  background: $color-admin-ctrl;
  .header-title {
    height: 30px;
    line-height: 30px;
    padding-left: 30px;
    background: $color-admin-ctrl-header;
  }
  .control-body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    .body-wrap {
      width: 100%;
      height: 100%;
      .drag-list-menu {
        padding: 5px;
        .list-group {
          margin-bottom: 10px;
          .list-group-header {
            line-height: 16px;
            font-size: 12px;
            color: #999;
          }
          .list-group-body {
            .list-item {
              position: relative;
              overflow: hidden;
              text-overflow: ellipsis;
              white-space: nowrap;
              padding: 0 6px;
              line-height: 26px;
              cursor: pointer;
              transition: all 0.2s ease-in-out;
              color: $color-text-info;
              span {
                display: inline-block;
                vertical-align: middle;
                text-indent: 7px;
                font-size: 12px;
              }
              &:hover {
                background: rgba(143, 255, 255, .1);
              }
            }
          }
        }
      }
    }
  }
}

//  需要覆盖bin-ui的样式
.body-wrap .bin-scrollbar__wrap {
  overflow-x: hidden;
}
