@import "../common/var.styl"
@import "../board/control.styl"
@import "../board/options.styl"
@import "../board/canvas.styl"
@import "../board/edit-slider.styl"
// 主体布局
.dv-admin {
  width: 100%;
  height: 100%;
  overflow: hidden;
  .board-layout {
    position: relative;
    width: 100%;
    height: 100%;
    display: inline-block;
    background: #ffffff;
    overflow: hidden;
    cursor: default;
    user-select: none;
    font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    box-sizing: border-box;
    .board-header {
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      width: 100%;
      height: 40px;
      line-height: 40px;
      z-index: 2500;
      background: $color-admin-main;
      transition: all .5s ease-in .1s;
      .header-title {
        width: 200px;
        height: 40px;
        display: inline-block;
        .iconfont {
          display: inline-block;
          vertical-align: top;
          height: 100%;
          line-height: 40px;
          cursor: pointer;
          color: $color-blue;
          padding: 0 5px;
        }
        span {
          display: inline-block;
          vertical-align: top;
          font-size: 14px;
          line-height: 40px;
          color: $color-blue;
          padding-left: 20px;
        }
      }
      .control {
        padding-left: 30px;
        height: 40px;
        line-height: 40px;
        .iconfont {
          cursor: pointer;
          margin-right: 15px;
          font-size: 18px;
          transition: .3s;
          &:hover {
            color: $color-primary;
          }
        }
      }
      .right-box {
        width: 300px;
        height: 40px;
        line-height: 40px;
        display: inline-block;
        text-align: center;
        .iconfont {
          cursor: pointer;
          width: 65px;
          font-size: 18px;
          transition: .3s;
          &:hover {
            color: $color-primary;
          }
        }
      }
    }
    .center-box {
      position: relative;
      height: 100%;
      padding-top: 40px;
      .board-center {
        position: absolute;
        top: 40px;
        left: 200px;
        right: 300px;
        bottom: 0;
        transition: right .3s;
      }
    }
  }
}

